/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to bottom, #4e54c8, #8f94fb);
}

.splash-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  opacity: 0.9;
  margin-bottom: 60rpx;
}

.start-button {
  width: 300rpx !important;
  border-radius: 40rpx;
  font-weight: normal;
  background: #fff !important;
  color: #4e54c8 !important;
}
