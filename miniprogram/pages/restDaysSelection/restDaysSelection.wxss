.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.content {
  padding: 30rpx;
  padding-top: calc(44px + env(safe-area-inset-top) + 30rpx);
}

.mode-tabs {
  display: flex;
  background: #fff;
  padding: 4rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab.active {
  color: #07c160;
  font-weight: 500;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 6rpx;
}

.tab.active::after {
  display: none;
}

.week-selection,
.date-selection {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.week-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 30rpx;
}

.week-item {
  aspect-ratio: 1.2;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7f7f7;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
  transition: all 0.3s;
  position: relative;
  padding: 20rpx;
}

.week-item.selected {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
  font-weight: 500;
}

.week-item.selected::after {
  content: '';
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 12rpx;
  height: 6rpx;
  border-left: 2rpx solid #07c160;
  border-bottom: 2rpx solid #07c160;
  transform: rotate(-45deg);
}

.tips {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.date-picker {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.date-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
}

.date-item text {
  color: #333;
  font-size: 28rpx;
}

.picker-value {
  color: #07c160;
  font-size: 28rpx;
  min-width: 180rpx;
  text-align: right;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.confirm-btn:active {
  opacity: 0.9;
}

/* 导航栏样式 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.nav-bar-inner {
  height: 44px;
  display: flex;
  align-items: center;
  position: relative;
}

.back-btn {
  padding: 12px 16px;
  z-index: 1;
}

.back-arrow {
  display: inline-block;
  width: 10px;
  height: 10px;
  border-left: 2px solid #333;
  border-bottom: 2px solid #333;
  transform: rotate(45deg);
}

.nav-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  color: #333;
}